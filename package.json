{
  "name": "chrome-react-extension-starter",
  "version": "1.0.0",
  "displayName": "Chrome Extension Starter",
  "description": "Chrome Extension Starter",
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:web": "npm run build:web -- --mode development",
    "dev:js": "npm run build:js -- --mode development",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:injectJs": "npm run build:injectJs -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js build:injectJs",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts",
    "build:injectJs": "vite build --config vite.config.inject.content.mts",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*"
  },
  "author": "django",
  "license": "MIT",
  "homepage": "https://github.com/sixdjango/chrome-react-extension-starter",
  "dependencies": {
    "@douyinfe/semi-ui": "^2.62.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/chrome": "0.0.158",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@yc-tech/eslint-config": "^0.1.1",
    "@yc-tech/prettier-config": "^0.1.0",
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "rimraf": "^6.0.1",
    "shell-quote": "^1.8.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "webextension-polyfill": "^0.12.0"
  }
}
